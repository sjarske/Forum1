@model  Models.ForumTopicModel


<h1>Welcome to the @Model.Forum.Name Forum!</h1>
<br />

@if (Model.Posts.Any())
{
    <table class="table table-bordered table-hover">
        <tbody>
            @foreach (var post in Model.Posts)
            {
            <tr>
                <td>
                    <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">@post.Title</a>
                </td>
                <td>
                    @post.Author
                </td>
                <td>
                    @post.DatePosted
                </td>
                <td>
                    @post.RepliesCount
                </td>
            </tr>
            }
        </tbody>
    </table>
}

else
{
    <div class="noPosts">
        <h3>
            It looks like there are no @Model.Forum.Name  posts yet.<br />
            Do you want to 
            <a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id">create</a> 
            one?
        </h3>
    </div>
}


