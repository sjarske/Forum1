@model Forum1.ViewModels.ForumIndexModel

<h1>Forums</h1>

<table class="table table-hover" id="forumIndexTable">
    <tbody>
        @foreach (var forum in Model.ForumsList)
        {
        <tr>
            <td>
                <a href="@Url.Action("Topic", "Forum", forum)">
                    @forum.Title
                </a>
            </td>
            <td>
                @forum.Description
            </td>
        </tr>
        }
    </tbody>
</table>
